<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mismascotasperritos">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <uses-permission android:name="android.permission.SEND_SMS"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icons8_dog_paw_30"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icons8_dog_paw_30"
        android:supportsRtl="true"
        android:theme="@style/Theme.MisMascotasPerritos">
        <activity android:name=".MascotasFavoritas" />
        <activity android:name=".AcercaD" />
        <activity android:name=".Contacto" />

        <activity
            android:name=".DetalleMascota"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>